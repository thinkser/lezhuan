<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.thinkser.core.R" />

        <import type="android.view.View" />

        <variable
            name="backColor"
            type="Integer" />

        <variable
            name="layoutColor"
            type="Integer" />

        <variable
            name="lineColor"
            type="Integer" />

        <variable
            name="titleColor"
            type="Integer" />

        <variable
            name="title"
            type="String" />

        <variable
            name="back"
            type="android.view.View.OnClickListener" />

        <variable
            name="buttonColor"
            type="Integer" />

        <variable
            name="buttonText"
            type="String" />

        <variable
            name="buttonAction"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:bgColor="@{layoutColor}">

        <!--通知栏留白-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <!--返回按钮-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:onClickListener="@{back}"
                android:scaleType="centerInside"
                android:visibility="@{backColor==0?View.GONE:View.VISIBLE}"
                app:src="@{R.drawable.svg_back}"
                app:tint="@{backColor}" />

            <!--分割线-->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:visibility="@{lineColor==0?View.GONE:View.VISIBLE}"
                app:bgColor="@{lineColor}" />

            <!--标题-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="13dp"
                android:text="@{title}"
                android:textColor="@{titleColor}"
                android:textSize="15sp" />

            <!--按钮-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:onClick="@{buttonAction}"
                android:paddingRight="13dp"
                android:text="@{buttonText}"
                android:textColor="@{buttonColor}"
                android:textSize="15sp"
                android:visibility="@{buttonColor==0?View.GONE:View.VISIBLE}" />
        </LinearLayout>

    </LinearLayout>

</layout>